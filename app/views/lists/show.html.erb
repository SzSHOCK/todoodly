<h2><%= @list.name %></h2>
<p><%= @list.description %></p>

<h3>Stuff to do</h3>
<ul id="incompleted">
	<% @list.tasks.incompleted.each do |task| %>
	<li><%= task.description %> - 
		<%= button_to "Complete", complete_task_path(@list.id,task.id) %> |
		<%= link_to "Edit", edit_task_url(@list.id,task.id) %> | 
		<%= link_to "Delete", delete_task_url(@list.id,task.id), :method => :delete %>
		</li>
	<% end %>
</ul>

<h3>Stuff I've done</h3>
<ul id="completed">
	<% @list.tasks.completed.each do |task| %>
	<li><%= task.description %> - 
		<%= link_to "Delete", delete_task_url(@list.id,task.id), :method => :delete %> </li>
	<% end %>
</ul>

<hr />

<%= form_for [@list, @task] do |form| %>

<p><%= form.text_field :description %> <%= form.submit %></p>

<% end %>

<hr />
<%= link_to "Back to all lists", lists_url %>